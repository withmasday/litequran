[
    {
        "id": 1,
        "ayat": 1,
        "arabic": "عَبَسَ وَتَوَلّٰىٓۙ",
        "translate": "‘Abasa wa tawallā.",
        "meaning": "Dia (Nabi Muhammad) berwajah masam dan berpaling"
    },
    {
        "id": 2,
        "ayat": 2,
        "arabic": "اَنْ جَاۤءَهُ الْاَعْمٰىۗ",
        "translate": "An jā'ahul-a‘mā.",
        "meaning": "karena seorang tunanetra (Abdullah bin Ummi Maktum) telah datang kepadanya."
    },
    {
        "id": 3,
        "ayat": 3,
        "arabic": "وَمَا يُدْرِيْكَ لَعَلَّهٗ يَزَّكّٰىٓۙ",
        "translate": "Wa mā yudrīka la‘allahū yazzakkā.",
        "meaning": "Tahukah engkau (Nabi Muhammad) boleh jadi dia ingin menyucikan dirinya (dari dosa)"
    },
    {
        "id": 4,
        "ayat": 4,
        "arabic": "اَوْ يَذَّكَّرُ فَتَنْفَعَهُ الذِّكْرٰىۗ",
        "translate": "Au yażżakkaru fatanfa‘ahuż-żikrā.",
        "meaning": "atau dia (ingin) mendapatkan pengajaran sehingga pengajaran itu bermanfaat baginya?"
    },
    {
        "id": 5,
        "ayat": 5,
        "arabic": "اَمَّا مَنِ اسْتَغْنٰىۙ",
        "translate": "Ammā manistagnā.",
        "meaning": "Adapun orang yang merasa dirinya serba cukup (para pembesar Quraisy),"
    },
    {
        "id": 6,
        "ayat": 6,
        "arabic": "فَاَنْتَ لَهٗ تَصَدّٰىۗ",
        "translate": "Fa anta lahū taṣaddā.",
        "meaning": "engkau (Nabi Muhammad) memberi perhatian kepadanya."
    },
    {
        "id": 7,
        "ayat": 7,
        "arabic": "وَمَا عَلَيْكَ اَلَّا يَزَّكّٰىۗ",
        "translate": "Wa mā ‘alaika allā yazzakkā.",
        "meaning": "Padahal, tidak ada (cela) atasmu kalau dia tidak menyucikan diri (beriman)."
    },
    {
        "id": 8,
        "ayat": 8,
        "arabic": "وَاَمَّا مَنْ جَاۤءَكَ يَسْعٰىۙ",
        "translate": "Wa ammā man jā'aka yas‘ā.",
        "meaning": "Adapun orang yang datang kepadamu dengan bersegera (untuk mendapatkan pengajaran),"
    },
    {
        "id": 9,
        "ayat": 9,
        "arabic": "وَهُوَ يَخْشٰىۙ",
        "translate": "Wa huwa yakhsyā.",
        "meaning": "sedangkan dia takut (kepada Allah),"
    },
    {
        "id": 10,
        "ayat": 10,
        "arabic": "فَاَنْتَ عَنْهُ تَلَهّٰىۚ",
        "translate": "Fa anta ‘anhu talahhā.",
        "meaning": "malah engkau (Nabi Muhammad) abaikan."
    },
    {
        "id": 11,
        "ayat": 11,
        "arabic": "كَلَّآ اِنَّهَا تَذْكِرَةٌ ۚ",
        "translate": "Kallā innahā tażkirah(tun).",
        "meaning": "Sekali-kali jangan (begitu)! Sesungguhnya (ajaran Allah) itu merupakan peringatan."
    },
    {
        "id": 12,
        "ayat": 12,
        "arabic": "فَمَنْ شَاۤءَ ذَكَرَهٗ ۘ",
        "translate": "Faman syā'a żakarah(ū).",
        "meaning": "Siapa yang menghendaki tentulah akan memperhatikannya"
    },
    {
        "id": 13,
        "ayat": 13,
        "arabic": "فِيْ صُحُفٍ مُّكَرَّمَةٍۙ",
        "translate": "Fī ṣuḥufim mukarrmah(tin).",
        "meaning": "di dalam suhuf yang dimuliakan (di sisi Allah),"
    },
    {
        "id": 14,
        "ayat": 14,
        "arabic": "مَّرْفُوْعَةٍ مُّطَهَّرَةٍ ۢ ۙ",
        "translate": "Marfū‘atim muṭahharah(tin).",
        "meaning": "yang ditinggikan (kedudukannya) lagi disucikan"
